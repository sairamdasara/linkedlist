class Node
{
    int data;
    Node next;
    Node(int value)
    {
        data=value;
        next=null;
    }

    public static void main(String[] args) {
        Node head = new Node(10);
        Node second = new Node(20);
        Node third = new Node(30);
        Node four = new Node(40);
        head.next = second;
        second.next = third;
        third.next = four;
        four.next=second;
        Node slow = head;
        Node fast = head;
        boolean hasloop = false;
        while (fast != null && fast.next != null) {
            slow = slow.next;
            fast = fast.next.next;


            if (slow == fast) {
                hasloop = true;
                break;

            }
        }

        if(hasloop)
        {
            System.out.println("loop detected");
        }
        else
        {
            System.out.println("no loop detected");
        }

        if(hasloop)
        {
            slow=head;
            if(slow==fast)
            {
                while(fast.next!=slow)
                {
                    fast=fast.next;
                }
            }
            else
            {
                while(slow.next!=fast.next)
                {
                    slow=slow.next;
                    fast=fast.next;
                }
            }
            fast.next=null;
        }

        Node temp=head;
        while(temp!=null)
        {
            System.out.print(temp.data+" ");
            temp=temp.next;

        }
        System.out.println("null");

    }
}
